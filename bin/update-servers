#!/bin/bash

# Usage: ./update-servers.sh [--verbose]
VERBOSE=false
if [[ "$1" == "--verbose" ]]; then
    VERBOSE=true
fi

# Log file to remember updated servers
LOG_FILE="/tmp/updated_servers.log"
TODAY=$(date +%F)

# List of servers (replace with your actual servers or load from a file)
SERVERS=(
    "hetzner-staging"
    "hetzner-production"
    "control-panel.instance.studio"
    "impact2023.leapfroginvest.com"
    # add more servers here
)

# Make sure log file exists
touch "$LOG_FILE"

# Loop through each server
for SERVER in "${SERVERS[@]}"; do
    if grep -q "$TODAY $SERVER" "$LOG_FILE"; then
        echo "‚è© Skipping $SERVER (already updated today)"
        continue
    fi

    echo "========================================"
    echo "üîó Connecting to $SERVER"
    echo "========================================"

    if $VERBOSE; then
        ssh -o BatchMode=yes "$SERVER" bash <<'EOF'
      echo "--- Step 1: Updating and upgrading packages (verbose) ---"
      sudo apt update
      sudo apt upgrade -y

      echo "--- Step 2: Checking if reboot is needed ---"
      if [ -f /var/run/reboot-required ]; then
        echo "üîÅ Reboot required. Scheduling reboot at 00:00..."
        sudo shutdown -r 00:00
      else
        echo "‚úÖ No reboot needed."
      fi
EOF
    else
        ssh -o BatchMode=yes "$SERVER" bash <<'EOF'
      echo "--- Step 1: Updating and upgrading packages (silent) ---"
      sudo apt update > /dev/null 2>&1
      sudo apt upgrade -y > /dev/null 2>&1

      echo "--- Step 2: Checking if reboot is needed ---"
      if [ -f /var/run/reboot-required ]; then
        echo "üîÅ Reboot required. Scheduling reboot at 00:00..."
        sudo shutdown -r 00:00
      else
        echo "‚úÖ No reboot needed."
      fi
EOF
    fi

    echo "$TODAY $SERVER" >>"$LOG_FILE"
    echo "‚úÖ Done with $SERVER"
    echo ""
done
